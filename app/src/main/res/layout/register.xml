<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#1D539D">

        <ImageView
            android:id="@+id/user_back"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/personal_back_img"
            app:layout_heightPercent="10%w"
            app:layout_widthPercent="10%w" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="注册"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/register_tab"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_heightPercent="8%h"
        app:layout_widthPercent="100%w"
        app:tabIndicatorColor="#1D539D"
        app:tabSelectedTextColor="#1D539D">

        <Button
            android:id="@+id/phone_zhuce"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:text="手机注册"
            android:textColor="@color/textbule"
            app:layout_heightPercent="100%h" />

        <Button
            android:id="@+id/email_zhuce"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:text="邮箱注册"
            android:textColor="@color/textbule"
            app:layout_heightPercent="100%h" />
    </com.zhy.android.percent.support.PercentLinearLayout>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_heightPercent="1%h"
        app:layout_widthPercent="100%w"
        app:tabIndicatorColor="#1D539D"
        app:tabSelectedTextColor="#1D539D">

        <TextView
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:text=""
            android:textColor="@color/textbule"
            app:layout_heightPercent="100%h" />

        <TextView
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:text=""
            android:textColor="@color/textbule"
            app:layout_heightPercent="100%h" />
    </com.zhy.android.percent.support.PercentLinearLayout>
    <com.zhy.android.percent.support.PercentFrameLayout
        android:id="@+id/register_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="80%h"
        app:layout_widthPercent="100%w">

    </com.zhy.android.percent.support.PercentFrameLayout>
</com.zhy.android.percent.support.PercentLinearLayout>