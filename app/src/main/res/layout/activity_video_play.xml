<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <io.vov.vitamio.widget.VideoView
        android:id="@+id/surface_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="100%"
        app:layout_widthPercent="100%"/>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="100%"
        app:layout_widthPercent="100%">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/ll_up"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="12%"
        app:layout_widthPercent="100%"
        android:background="#55FFFFFF"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_finish"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_chevron_left_white_36dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_video_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/iv_collect"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/play_fullsrcee_collect"/>
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/play_fullsrcee_share"/>
        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/play_fullscree_menu"/>
    </com.zhy.android.percent.support.PercentLinearLayout>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/ll_down"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="12%"
            app:layout_widthPercent="100%"
            android:layout_alignParentBottom="true"
            android:background="#55FFFFFF"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_pause"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pla_pause"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="00:00:00"
                android:textColor="#FFFFFF"
                android:textSize="20sp"/>
            <SeekBar
                android:id="@+id/bar_video"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />
            <TextView
                android:id="@+id/tv_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="高清"
                android:textSize="30sp"
                android:background="@drawable/tv_shape"
                android:textColor="#FFFFFF"/>
            <ImageView
                android:id="@+id/iv_volume"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/volume_continue"/>
            <SeekBar
                android:id="@+id/bar_volume"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />
        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentFrameLayout>
