<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_img"
        android:scaleType="fitXY"
        android:layout_width="129dp"
        android:layout_height="60dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/default_time_view"
        android:layout_above="@+id/item_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/play"
        android:layout_above="@+id/item_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="视频时间"
        android:textColor="#ffffff"
        android:layout_marginLeft="7dp"
        android:layout_above="@+id/item_text"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        />
    <TextView
        android:id="@+id/item_text"
        android:layout_width="140dp"
        android:layout_height="33dp"
        android:layout_below="@+id/item_img"
        android:layout_marginTop="8dp"
        android:text="城城城城城城城城城城城城城城城城城城城城城城城城"

        android:textColor="#000000"
        android:layout_alignRight="@+id/item_img"
        android:layout_alignEnd="@+id/item_img" />

    <TextView
        android:id="@+id/fdkghfughs"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@+id/item_text"
        android:layout_marginTop="10dp"
        android:background="#e6e6e6" />
</com.zhy.android.percent.support.PercentRelativeLayout>