<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#1D539D">

        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="直播中国"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/liveChina_gerenzhongxin"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/person_sign"
            app:layout_heightPercent="8%w"
            app:layout_widthPercent="8%w" />

    </com.zhy.android.percent.support.PercentRelativeLayout>



    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.design.widget.TabLayout
            android:id="@+id/livechina_tablayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="10%w"
            app:layout_widthPercent="90%w"
            app:tabIndicatorColor="@color/colorPrimary"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabTextColor="@android:color/black"
            app:tabMode="scrollable"
            ></android.support.design.widget.TabLayout>
        <ImageView
            android:id="@+id/livechina_add"
            android:src="@drawable/live_china_add"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="10%w"
            app:layout_widthPercent="10%w"/>


    </com.zhy.android.percent.support.PercentLinearLayout>


    <com.example.admin.myapplication.utils.NoScrollViewPager
        android:id="@+id/livechina_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.example.admin.myapplication.utils.NoScrollViewPager>

</com.zhy.android.percent.support.PercentLinearLayout>