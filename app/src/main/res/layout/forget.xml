<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#1f539e"
        app:layout_heightPercent="10%h"
        app:layout_widthPercent="100%w">

        <ImageView
            android:id="@+id/forget_back"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/personal_back_img"
            app:layout_heightPercent="10%w"
            app:layout_widthPercent="10%w" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="忘记密码"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_heightPercent="50%h"
            app:layout_widthPercent="50%w"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:text="只支持手机号注册用户找回密码"
        android:textColor="@color/textbule"
        app:layout_heightPercent="5%h"
        app:layout_widthPercent="95%w" />
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%h"
        app:layout_widthPercent="87%w"
        android:background="#ffffff"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/phone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/info_et"
            android:hint="请输入注册时的手机号"
            app:layout_heightPercent="100%h"
            app:layout_widthPercent="100%w" />

        <ImageView
            android:id="@+id/phone_gray"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="5%w"
            app:layout_widthPercent="5%w"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/delete_gray" />
    </com.zhy.android.percent.support.PercentRelativeLayout>


    <TextView
        android:id="@+id/forget_phone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="5%h"
        app:layout_widthPercent="90%w"
        android:textColor="#ea2000"
        android:layout_marginLeft="25dp"
        android:text=""
        />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        app:layout_heightPercent="10%h"
        app:layout_widthPercent="100%w">
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="90%h"
            app:layout_widthPercent="56%w"
            android:background="#ffffff"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="25dp"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/forget_tupian_yanzhang"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/info_et"
                android:hint="请输入图片验证码"
                app:layout_heightPercent="100%h"
                app:layout_widthPercent="100%w"

                />

            <ImageView
                android:id="@+id/forget_yanzhang_gray"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="5%w"
                app:layout_widthPercent="5%w"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/delete_gray" />
        </com.zhy.android.percent.support.PercentRelativeLayout>


        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:text="获取验证码"
            android:background="@color/huise"
            android:id="@+id/forget_ypyz"
            app:layout_heightPercent="85%h"
            android:layout_gravity="center_vertical"
            app:layout_widthPercent="30%w" />
    </com.zhy.android.percent.support.PercentLinearLayout>
    <TextView
        android:id="@+id/text_tistpyz"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="5%h"
        app:layout_widthPercent="90%w"
        android:textColor="#ea2000"

        android:layout_marginLeft="25dp"
        android:text=""
        />
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        app:layout_heightPercent="10%h"
        app:layout_widthPercent="100%w">
        <com.zhy.android.percent.support.PercentRelativeLayout

            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="90%h"
            app:layout_widthPercent="56%w"
            android:background="#ffffff"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="25dp"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/forget_duanxin_yanzhang"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/info_et"
                android:hint="请输入收到的验证码"
                app:layout_heightPercent="100%h"
                app:layout_widthPercent="100%w"

                />

            <ImageView
                android:id="@+id/forget_duanxin_gray"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="5%w"
                app:layout_widthPercent="5%w"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/delete_gray" />
        </com.zhy.android.percent.support.PercentRelativeLayout>



        <Button
            android:id="@+id/forget_yanzbut"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/login_btn"
            android:text="获取验证码"
            android:textColor="#ffffff"
            app:layout_heightPercent="80%h"
            android:layout_gravity="center_vertical"
            app:layout_widthPercent="30%w"
            />
    </com.zhy.android.percent.support.PercentLinearLayout>
    <TextView
        android:id="@+id/forget_dxyz"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="5%h"
        app:layout_widthPercent="90%w"
        android:textColor="#ea2000"
        android:layout_marginLeft="25dp"
        android:text=""
        />
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%h"
        app:layout_widthPercent="87%w"
        android:background="#ffffff"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/register_newpass"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/info_et"
            android:hint="请设置新密码"
            app:layout_heightPercent="100%h"
            app:layout_widthPercent="100%w" />

        <ImageView
            android:id="@+id/register_gary"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="5%w"
            app:layout_widthPercent="5%w"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/delete_gray" />
    </com.zhy.android.percent.support.PercentRelativeLayout>



    <TextView
        android:id="@+id/forget_czmm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="5%h"
        app:layout_widthPercent="90%w"
        android:textColor="#ea2000"

        android:layout_marginLeft="25dp"
        android:text=""
        />

    <Button
        android:id="@+id/forget_but"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        app:layout_heightPercent="12%w"
        app:layout_widthPercent="90%w"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_btn"
        android:text="找回密码"
        android:textColor="#ffffff"
        />

</com.zhy.android.percent.support.PercentLinearLayout>